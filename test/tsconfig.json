{
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@/*"                 : [ "src/*" ],
      "@scrow/demo/*"       : [ "demo/*"                        ],
      "@scrow/test"         : [ "test/src/index.js"             ],
      "@scrow/sdk"          : [ "src/index.js"                  ],
      "@scrow/sdk/client"   : [ "src/client/index.js"           ],
      "@scrow/sdk/core"     : [ "src/core/index.js"             ],
      "@scrow/sdk/cvm"      : [ "src/vm/index.js"               ],
      "@scrow/sdk/account"  : [ "src/core/module/account/index.js"  ],
      "@scrow/sdk/contract" : [ "src/core/module/contract/index.js" ],
      "@scrow/sdk/deposit"  : [ "src/core/module/deposit/index.js"  ],
      "@scrow/sdk/witness"  : [ "src/core/module/witness/index.js"  ],
      "@scrow/sdk/covenant" : [ "src/core/lib/covenant.js"      ],
      "@scrow/sdk/proposal" : [ "src/core/lib/proposal.js"      ],
      "@scrow/sdk/recovery" : [ "src/core/lib/recovery.js"      ],
      "@scrow/sdk/return"   : [ "src/core/lib/return.js"        ],
      "@scrow/sdk/session"  : [ "src/core/lib/session.js"       ],
      "@scrow/sdk/tx"       : [ "src/core/lib/tx.js"            ],
      "@scrow/sdk/vm"       : [ "src/core/lib/vm.js"            ],
      "@scrow/sdk/schema"   : [ "src/core/schema/index.js"      ],
      "@scrow/sdk/util"     : [ "src/core/util/index.js"        ],
      "@scrow/sdk/validate" : [ "src/core/validation/index.js"  ]
    },
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [ "node_modules" ],
  "include": [ "**/*.ts" ]
}
