{
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@/*"                      : [ "src/*" ],
      "@scrow/demo/*"            : [ "demo/*"                            ],
      "@scrow/test"              : [ "test/src/index.js"                 ],
      "@scrow/sdk"               : [ "src/index.js"                      ],
      "@scrow/sdk/client"        : [ "src/client/index.js"               ],
      "@scrow/sdk/client/lib"    : [ "src/client/lib/index.js"           ],
      "@scrow/sdk/client/schema" : [ "src/client/schema/index.js"        ],
      "@scrow/sdk/core"          : [ "src/core/index.js"                 ],
      "@scrow/sdk/core/lib"      : [ "src/core/lib/index.js"             ],
      "@scrow/sdk/core/schema"   : [ "src/core/schema/index.js"          ],
      "@scrow/sdk/cvm"           : [ "src/cvm/index.js"                  ],
      "@scrow/sdk/account"       : [ "src/core/module/account/index.js"  ],
      "@scrow/sdk/contract"      : [ "src/core/module/contract/index.js" ],
      "@scrow/sdk/deposit"       : [ "src/core/module/deposit/index.js"  ],
      "@scrow/sdk/machine"       : [ "src/core/module/machine/index.js"  ],
      "@scrow/sdk/witness"       : [ "src/core/module/witness/index.js"  ],
      "@scrow/sdk/util"          : [ "src/util/index.js"                 ],
      "@scrow/sdk/verify"        : [ "src/core/validation/index.js"      ]
    },
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [ "node_modules" ],
  "include": [ "**/*.ts" ]
}
